<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
            prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="duke.MainWindow">
    <children>
        <!-- Chat Display Area -->
        <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" 
                    AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="0.0" 
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <content>
                <VBox fx:id="dialogContainer" spacing="10.0">
                    <padding>
                        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
        
        <!-- Input Area -->
        <HBox alignment="CENTER_LEFT" spacing="10.0" 
              AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" 
              AnchorPane.rightAnchor="10.0">
            <children>
                <TextField fx:id="userInput" promptText="Type your message here..." 
                          HBox.hgrow="ALWAYS" onAction="#handleUserInput" />
                <Button fx:id="sendButton" text="Send" onAction="#handleUserInput" 
                        minWidth="60.0" />
            </children>
        </HBox>
    </children>
</AnchorPane>
